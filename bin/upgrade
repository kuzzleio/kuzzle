const
  yargs = require('yargs'),
  Context = require('./.upgrades/lib/context');

const
  args = yargs
    .usage('USAGE: $0 [OPTIONS]')
    .options({
      C: {
        type: 'boolean',
        group: 'Optional',
        default: false,
        describe: 'Disable colored messages in the terminal'
      },
      output: {
        type: 'string',
        alias: 'o',
        group: 'Optional',
        default: `upgrade-${Date.now()}.report`,
        describe: 'Upgrade logs file name',
      },
      R: {
        type: 'boolean',
        group: 'Optional',
        default: false,
        describe: 'Disable upgrades report in a log file',
      }
    })
    .strict(true)
    .parse();

(async () => {
  const context = new Context(args);

  await context.init();

  for (const dir of context.version.list) {
    const migrationProcess = require(`${__dirname}/.upgrades/versions/${dir}`);

    context.log.notice(`Starting to migrate from ${dir}...`);

    await migrationProcess(context);
  }
})();
