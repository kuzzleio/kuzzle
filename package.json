{
  "name": "kuzzle",
  "author": "The Kuzzle Team <support@kuzzle.io>",
  "version": "1.12.0",
  "description": "Kuzzle is an open-source solution that handles all the data management through a secured API, with a large choice of protocols.",
  "main": "./lib/index.js",
  "bin": {
    "kuzzle": "./bin/kuzzle"
  },
  "scripts": {
    "postinstall": "npm run build-cli",
    "test": "npm run --silent lint && npm run unit-testing && npm run functional-testing",
    "unit-testing": "nyc --reporter=text-summary --reporter=lcov mocha",
    "functional-testing": "bash features/run.sh",
    "cucumber": "cucumber.js --fail-fast",
    "codecov": "codecov",
    "lint": "eslint --max-warnings=0 ./lib ./test ./features",
    "build-cli": "node bin/build-cli.js",
    "doc-prepare": "kuzdoc framework:install",
    "doc-dev": "kuzdoc repo:dev -d /core/1/ -v 1",
    "doc-build": "kuzdoc repo:build -d /core/1/ -v 1",
    "doc-upload": "kuzdoc repo:deploy -d /core/1/ -v 1",
    "doc-cloudfront": "kuzdoc repo:cloudfront -d /core/1/",
    "doc-deploy": "npm run doc-upload && npm run doc-cloudfront",
    "doc-netlify": "npm run doc-prepare && kuzdoc repo:build -d / -v 1",
    "doc-error-codes": "node doc/build-error-codes"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/runtime": "^7.10.2",
    "async": "^3.2.0",
    "bluebird": "^3.7.2",
    "bufferutil": "^4.0.1",
    "busboy": "^0.3.1",
    "bytes": "^3.1.0",
    "cli-color": "^1.4.0",
    "commander": "^3.0.1",
    "debug": "^4.1.1",
    "denque": "^1.4.1",
    "didyoumean": "^1.2.1",
    "dumpme": "^1.0.3",
    "easy-circular-list": "^1.0.13",
    "elasticsearch": "^16.7.1",
    "eventemitter3": "^4.0.4",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.4",
    "ioredis": "^4.17.3",
    "json-stable-stringify": "1.0.1",
    "json2yaml": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "koncorde": "^2.0.0",
    "kuzzle-common-objects": "^3.0.17",
    "kuzzle-sdk": "^6.2.7",
    "kuzzle-vault": "^1.0.2",
    "lodash": "4.17.15",
    "moment": "^2.26.0",
    "mosca": "^2.8.3",
    "ms": "^2.1.2",
    "murmurhash-native": "^3.5.0",
    "ndjson": "^1.5.0",
    "passport": "^0.4.1",
    "rc": "1.2.8",
    "readline-sync": "^1.4.10",
    "semver": "^6.3.0",
    "socket.io": "2.2.0",
    "sorted-array": "^2.0.4",
    "stream-json": "^1.5.0",
    "triple-beam": "^1.3.0",
    "utf-8-validate": "^5.0.2",
    "uuid": "^3.4.0",
    "validator": "^11.1.0",
    "winston": "^3.2.1",
    "winston-elasticsearch": "0.7.12",
    "winston-syslog": "2.1.0",
    "winston-transport": "^4.3.0",
    "ws": "^6.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kuzzleio/kuzzle.git"
  },
  "devDependencies": {
    "codecov": "^3.7.0",
    "cucumber": "^5.1.0",
    "eslint": "^5.16.0",
    "kuzdoc": "^1.2.2",
    "minimist": "1.2.0",
    "mocha": "^6.2.3",
    "mock-require": "^3.0.3",
    "mqtt": "^3.0.0",
    "nyc": "^14.1.1",
    "request": "^2.88.2",
    "request-promise": "^4.2.4",
    "rewire": "^4.0.1",
    "should": "13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^7.4.2",
    "socket.io-client": "^2.3.0",
    "strip-json-comments": "^3.1.0"
  },
  "engines": {
    "node": ">= 6.17.1"
  },
  "license": "Apache-2.0"
}
