{
  "name": "kuzzle",
  "author": "The Kuzzle Team <support@kuzzle.io>",
  "version": "2.7.2",
  "description": "Kuzzle is an open-source solution that handles all the data management through a secured API, with a large choice of protocols.",
  "bin": {
    "kuzzle": "./bin/start-kuzzle-server"
  },
  "scripts": {
    "start:dev": "node docker/scripts/reloader.js --inspect=0.0.0.0:9229 -r ts-node/register docker/scripts/start-kuzzle-dev.ts --enable-plugins functional-test-plugin",
    "prepublishOnly": "npm run build",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "test": "npm run --silent test:lint && npm run test:unit:coverage && npm run test:functional",
    "test:unit": "DEBUG= npx --node-arg=--trace-warnings mocha",
    "test:unit:coverage": "DEBUG= nyc --reporter=text-summary --reporter=lcov mocha",
    "test:functional": "npm run test:functional:legacy && npm run test:functional:sdk",
    "test:functional:legacy": "npm run test:functional:legacy:http && npm run test:functional:legacy:websocket && npm run test:functional:legacy:mqtt && npm run test:functional:legacy:cluster",
    "test:functional:legacy:http": "npx cucumber-js --format progress-bar --profile http",
    "test:functional:legacy:websocket": "npx cucumber-js --format progress-bar --profile websocket",
    "test:functional:legacy:mqtt": "npx cucumber-js --format progress-bar --profile mqtt",
    "test:functional:legacy:cluster": "npx cucumber-js --format progress-bar --profile websocketCluster",
    "test:functional:sdk": "npm run test:functional:sdk:http && npm run test:functional:sdk:websocket",
    "test:functional:sdk:http": "KUZZLE_PROTOCOL=http npx cucumber-js --profile http ./features-sdk",
    "test:functional:sdk:websocket": "KUZZLE_PROTOCOL=websocket npx cucumber-js --profile websocket ./features-sdk",
    "cucumber": "cucumber.js --fail-fast",
    "codecov": "codecov",
    "test:lint": "npm run test:lint:js && npm run test:lint:ts",
    "test:lint:ts": "eslint --max-warnings=0 ./lib --ext .ts --config .eslintc-ts.json",
    "test:lint:ts:fix": "eslint --max-warnings=0 --fix ./lib --ext .ts --config .eslintc-ts.json",
    "test:lint:js": "eslint --max-warnings=0 ./lib ./test ./features ./bin ./features-sdk ./doc/build-error-codes.js ./plugins/available/functional-test-plugin",
    "test:lint:js:fix": "eslint --max-warnings=0 --fix ./lib ./test ./features ./bin ./features-sdk ./doc/build-error-codes.js",
    "doc-prepare": "kuzdoc framework:install",
    "doc-dev": "kuzdoc repo:dev -d /core/2/ -v 2",
    "doc-build": "kuzdoc repo:build -d /core/2/ -v 2",
    "doc-upload": "kuzdoc repo:deploy -d /core/2/ -v 2",
    "doc-cloudfront": "kuzdoc repo:cloudfront -d /core/2/*",
    "doc-deploy": "npm run doc-upload && npm run doc-cloudfront",
    "doc-netlify": "npm run doc-prepare && kuzdoc repo:build -d / -v 2",
    "doc-error-codes": "node doc/build-error-codes"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.10.0",
    "aedes": "^0.44.0",
    "bluebird": "^3.7.2",
    "bufferutil": "^4.0.2",
    "busboy": "^0.3.1",
    "cli-color": "^2.0.0",
    "debug": "^4.3.1",
    "denque": "^1.4.1",
    "didyoumean": "^1.2.1",
    "dumpme": "^1.0.3",
    "eventemitter3": "^4.0.7",
    "inquirer": "^7.3.3",
    "ioredis": "^4.19.2",
    "ip": "^1.1.5",
    "json-stable-stringify": "^1.0.1",
    "json2yaml": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "koncorde": "^3.0.0",
    "kuzzle-common-objects": "^5.0.2",
    "kuzzle-plugin-auth-passport-local": "^6.2.0",
    "kuzzle-plugin-logger": "^2.0.7",
    "kuzzle-sdk": "^7.4.3",
    "kuzzle-vault": "^2.0.0",
    "lodash": "4.17.20",
    "moment": "^2.29.1",
    "ms": "^2.1.2",
    "murmurhash-native": "^3.5.0",
    "passport": "^0.4.1",
    "rc": "1.2.8",
    "semver": "^7.3.2",
    "sorted-array": "^2.0.4",
    "utf-8-validate": "^5.0.3",
    "uuid": "^8.3.1",
    "validator": "^13.1.17",
    "winston": "^3.3.3",
    "winston-elasticsearch": "0.12.1",
    "winston-syslog": "^2.4.4",
    "winston-transport": "^4.4.0",
    "ws": "^7.4.0",
    "yargs": "^16.1.1",
    "zeromq": "^5.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kuzzleio/kuzzle.git"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.165",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "async": "^3.2.0",
    "chokidar": "^3.4.3",
    "codecov": "^3.8.1",
    "cucumber": "^6.0.5",
    "eslint": "^7.14.0",
    "js-yaml": "^3.14.0",
    "kuzdoc": "^1.4.1",
    "mocha": "^8.2.1",
    "mock-require": "^3.0.3",
    "mqtt": "^4.2.5",
    "nyc": "^15.1.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "rewire": "^5.0.0",
    "should": "13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^9.2.1",
    "strip-json-comments": "^3.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">= 12.13.0"
  },
  "license": "Apache-2.0",
  "files": [
    "bin/**/*.js",
    "bin/**/*.d.ts",
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.json",
    "plugins/**/*.js",
    "plugins/**/*.d.ts",
    "plugins/**/*.json",
    "plugins/**/*.lua",
    "plugins/**/LICENSE.md",
    "plugins/**/README.md",
    "plugins/**/.keep",
    "protocols/**/*.js",
    "protocols/**/*.d.ts",
    "protocols/**/*.json",
    "protocols/**/LICENSE.md",
    "protocols/**/README.md",
    "protocols/**/.keep",
    "package.json",
    "package-lock.json",
    "index.js",
    "index.d.ts",
    ".kuzzlerc.sample",
    "LICENSE.md",
    "CONTRIBUTING.md",
    "README.md"
  ]
}
